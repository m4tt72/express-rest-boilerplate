{
  "name": "express-rest-boilerplate",
  "version": "1.0.0",
  "description": "Express REST api boilerplate",
  "main": "index.js",
  "scripts": {
    "start:dev": "NODE_ENV=development node index.js",
    "start:prod": "NODE_ENV=production node index.js",
    "watch": "NODE_ENV=development nodemon index.js",
    "lint": "eslint . --fix",
    "test": "npm run db:create:test && jest --verbose && npm run sequelize:test db:drop",
    "--- SEQUELIZE": "---",
    "sequelize:dev": "NODE_ENV=development sequelize-cli",
    "sequelize:prod": "NODE_ENV=production sequelize-cli",
    "sequelize:test": "NODE_ENV=test sequelize-cli",
    "--- DATABASE": "---",
    "db:create:dev": "npm run sequelize:dev db:create && npm run sequelize:dev db:migrate",
    "db:create:prod": "npm run sequelize:prod db:create && npm run sequelize:prod db:migrate",
    "db:create:test": "npm run sequelize:test db:create && npm run sequelize:test db:migrate",
    "--- APIDOC": "---",
    "docs:generate": "apidoc -i ./src -o docs/"
  },
  "keywords": [
    "express",
    "rest",
    "api",
    "boilerplate",
    "template"
  ],
  "author": "Yassine Fathi",
  "license": "MIT",
  "dependencies": {
    "apidoc": "^0.17.7",
    "axios": "^0.21.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "express": "^4.17.1",
    "express-rate-limit": "^5.0.0",
    "helmet": "^3.21.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "mysql2": "^1.7.0",
    "pg": "^7.0.0",
    "pg-hstore": "^2.3.3",
    "prettier": "^1.18.2",
    "sequelize": "^5.19.6"
  },
  "devDependencies": {
    "eslint": "^6.5.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "faker": "^4.1.0",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "nodemon": "^1.19.3",
    "sequelize-cli": "^5.5.1",
    "supertest": "^4.0.2"
  }
}
